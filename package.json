{
  "name": "my-miyabi-app",
  "version": "1.0.0",
  "description": "Miyabiフレームワークで構築された自律型開発プロジェクト",
  "scripts": {
    "mcp:check": "node .claude/mcp-servers/check-health.js",
    "mcp:list": "node -e \"console.log(JSON.stringify(require('./.claude/mcp.json'), null, 2))\"",
    "a2a:check": "node -e \"const {A2AAdapter} = require('./dist/a2a'); console.log('A2A Adapter loaded successfully')\"",
    "debug:check": "node -e \"const {DebugAgent} = require('./dist/agents/debug'); console.log('Debug Agent loaded successfully')\"",
    "build": "npm run build:main && npm run build:bundle",
    "build:main": "tsc",
    "build:bundle": "node scripts/bundle-mcp.js",
    "test": "jest",
    "test:bundle": "jest --testPathPattern=src/mcp/miyabi-bundle"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@modelcontextprotocol/server-filesystem": "^2025.12.18",
    "@octokit/rest": "^22.0.1",
    "glob": "^13.0.0",
    "simple-git": "^3.30.0",
    "systeminformation": "^5.28.5",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.27.2",
    "jest": "^30.2.0",
    "jest-cli": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.0.0"
  }
}
